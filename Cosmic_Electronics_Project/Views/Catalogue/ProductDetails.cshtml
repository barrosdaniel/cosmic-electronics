@model Product

<!-- ================ start banner area ================= -->
<section class="blog-banner-area" id="category">
	<div class="container">
		<div class="blog-banner">
			<div class="text-center">
				<h1>Product Details</h1>
			</div>
		</div>
	</div>
</section>
<!-- ================ end banner area ================= -->

<!--================Single Product Area =================-->
<div class="product_image_area">
	<div class="container">
		<div class="row s_product_inner">
			<div class="col-lg-6 d-flex">
				<img class="img-fluid" src="/img/product/@Model.Image" alt="Product image">
			</div>
			<div class="col-lg-5 offset-lg-1">
				<div class="s_product_text">
					<h3>@Model.Name</h3>
					<h2>@Model.Price.ToString("c")</h2>
					<ul class="list">
						<li><a class="active" href="#"><span>Category</span> : @Model.Category</a></li>
					</ul>
					<p>@Model.Description</p>
					<form id="@Model?.ProductID" asp-page="/Cart" method="post">
						<div class="product_count me-3">
							<label for="quantity">Quantity:</label>
							<input type="number" name="quantity" id="quantity" min="1">
						</div>
						<input type="hidden" asp-for="ProductID" />
						<input type="hidden" name="returnUrl"
								value="@ViewContext.HttpContext.Request.PathAndQuery()" />
						<button type="submit" class="btn btn-primary">Add To Cart</button>
                    </form>
				</div>
			</div>
		</div>
	</div>
</div>
<!--================End Single Product Area =================-->		